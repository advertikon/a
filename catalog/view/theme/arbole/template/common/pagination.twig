{% if pagination.total_page > 1 %}
<div class="pager">
	<ul>
		{% if pagination.page > 1 %}
		<li class="prev"><a href="{{ pagination.url('page', pagination.page - 1 ) }}"><span></span></a></li>
		{% endif %}
		{% for i in range( 1, pagination.total_page ) %}
		<li {{ pagination.page == i ? ' class="current" ' }}><a href="{{ pagination.url('page', i ) }}">{{ i }}</a></li>
		{% endfor %}
		{% if pagination.page != pagination.total_page %}
		<li class="next"><a href="{{ pagination.url('page', pagination.page + 1 ) }}"><span></span></a></li>
		{% endif %}
	</ul>
</div>
{% endif %}